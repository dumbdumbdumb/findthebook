doctype html
html(lang='en')
    include common/head.pug
    +head("Leads")
    body
        header
            .container
                .row.align-items-center
                    .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
                        h1 Course Materials List
                        table.table
                            thead
                                tr
                                    th(scope="col") class_title
                                    th(scope="col") book_title
                                    th(scope="col") book_publisher
                                    th(scope="col") book_location
                                    th(scope="col")
                                tr
                            tbody
                                for lead in leads
                                    tr(id=lead.id)
                                        td
                                            span #{lead.class_info[0].class_title}
                                        td
                                            span #{lead.book_title}
                                            //a(href="/lead/" + lead.id) Details
                                        td
                                            span #{lead.book_publisher}
                                        td
                                            span #{lead.book_location}
                                            a(href="./") Details
                                        td
                                            button(onclick=`deleteLead('${lead.id}')`).btn.btn-primary Delete
        include common/footer.pug
        +footer()
