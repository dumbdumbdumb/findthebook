doctype html
html(lang='en')
    body
        header
            .container
                .row.align-items-center
                    .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
                        h1 Leads
                        table.table
                            thead
                                tr
                                    th(scope="col") Email
                                    th(scope="col") Actions
                                    th(scope="col")
                                tr
                            tbody
                                for lead in leads
                                    tr(id=lead.id)
                                        td
                                            span #{lead.class_id}
                                        td
                                            span #{lead.student_id}
                                            //a(href="/lead/" + lead.id) Details
                                        td
                                            span #{lead}

